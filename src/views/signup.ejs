<%- include('includes/head') %>

<link rel="stylesheet" href="css/signup.css">

<div class="signup">
  <%- include('includes/advices') %> 
  <div class="signup-container">
    <form action="/signup/entry" method="post">
      <h3>Entre com suas informações nos campos abaixo:</h3>
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="group">
        <input required="" type="text" class="input" name="firstname">
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Nome*</label>
      </div>
      <div class="group">
        <input required="" type="text" class="input" name="lastname">
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Sobrenome*</label>
      </div>
      <div class="group">
        <input required="" type="text" class="input" name="age">
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Idade</label>
      </div>
      <div class="group">
        <input required="" type="text" class="input" name="email">
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>E-mail*</label>
      </div>
      <div class="group">
        <input required="" type="password" class="input" name="password">
        <span class="highlight"></span>
        <span class="bar"></span>
        <label>Senha*</label>
      </div>
      <button class="signup-button">Criar conta no qTask</button>
    </form>
  </div>
</div>

<%- include('includes/footer') %> 